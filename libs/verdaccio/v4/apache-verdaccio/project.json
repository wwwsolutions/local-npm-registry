{
  "root": "libs/verdaccio/v4/apache-verdaccio",
  "sourceRoot": "libs/verdaccio/v4/apache-verdaccio/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/verdaccio/v4/apache-verdaccio/**/*.ts"]
      }
    },
    "up": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/verdaccio/v4/apache-verdaccio/src",
        "commands": [
          "docker-compose --project-name v4-apache-verdaccio-{args.mode} --verbose -f ./{args.mode}/docker-compose.yml up -d"
        ]
      }
    },
    "down": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/verdaccio/v4/apache-verdaccio/src",
        "commands": [
          "docker-compose --project-name v4-apache-verdaccio-{args.mode} --verbose -f ./{args.mode}/docker-compose.yml down --volumes --remove-orphans"
        ]
      }
    },
    "recreate": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/verdaccio/v4/apache-verdaccio/src",
        "commands": [
          "docker-compose --project-name v4-apache-verdaccio-{args.mode} --verbose -f ./{args.mode}/docker-compose.yml up --build -d"
        ]
      }
    },
    "force-recreate": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/verdaccio/v4/apache-verdaccio/src",
        "commands": [
          "docker-compose --project-name v4-apache-verdaccio-{args.mode} --verbose -f ./{args.mode}/docker-compose.yml up --build --force-recreate -d"
        ]
      }
    },
    "system-prune": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": ["docker system prune -a --volumes -f"]
      }
    },
    "all-commands": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "nx run verdaccio-v4-apache-verdaccio:up --mode=apache2",
          "nx run verdaccio-v4-apache-verdaccio:down --mode=apache2",
          "nx run verdaccio-v4-apache-verdaccio:recreate --mode=apache2",
          "nx run verdaccio-v4-apache-verdaccio:force-recreate --mode=apache2",
          "nx run verdaccio-v4-apache-verdaccio:system-prune"
        ]
      }
    }

  },
  "tags": ["type:config", "scope:verdaccio"]
}
